<IfModule mod_rewrite.c>
  RewriteEngine On
  # --- Configura la base para el subdirectorio ---
  RewriteBase /presentacion/
  
  # --- Regla 1: No reescribir archivos que existen ---
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]
  
  # --- Regla 2: Reescribir todo lo dem√°s a index.html ---
  RewriteRule ^ index.html [L]
</IfModule>